<% layout('layouts/boilerplate')%> 


<div class="b-example-divider"></div>

<div class="row">
    <nav class="navbar navbar-expand text-bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand text-light">MOBILREGISTER</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="btn btn-success mx-2" class="nav-link" href="/mobilregister/new" role="button">Ny anv√§ndare</a>
                  </li>
                  <li class="nav-item">
                    <a class="btn btn-success" href="/mobilregister/addPhone" role="button">Ny telefonmodell</a>
                  </li>
                </ul>
              </div>
            <form action="/mobilregister" method="POST" class="d-flex" role="search">
            <input class="form-control me-2" for="name" type="text" id="search" name="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-success" type="submit">Search</button>
            </form>
        </div>
    </nav>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Namn</th>
                    <th scope="col">Telefonnummer</th>
                    <th scope="col">Modell</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(let user of users) { %> 
                    <tr scope="row">
                        <td><%=user.name %></td>
                        <td><%=user.number %></td>
                        <td><%=user.model%> </td>
                        <td><%=user.status%></td>
                        <td>
                            <form class="d-inline" action="/mobilregister/<%=user.id%>/edit">
                                <button type="submit" class="btn btn-info">Redigera</button>
                            </form>
                            <form class="d-inline" action="/mobilregister/<%=user.id%>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-danger">Ta bort</button>
                            </form>
                        </td>

                        
                    </tr>
                    <%  } %> 
            </tbody>
        </table>
    </div>
</div>

