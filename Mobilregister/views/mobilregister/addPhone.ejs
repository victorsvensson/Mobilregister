<% layout('layouts/boilerplate')%> 

<div class="row">
    <h2 class="text-center">Lägg till ny modell</h2>
    <div class="col-6 offset-3">
        <form action="/mobilregister/addPhone" method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Namn *</label>
                <input class="form-control" type="text" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Lägg till</button>
                <a class="btn btn-danger" href="/mobilregister/" role="button">Avbryt</a>
            </div>
        </form>
    </div>



    <div class="row">
        <div class="col-6 offset-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Namn</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let phone of phones) { %> 
                        <tr scope="row">
                            <td><%=phone.name %></td>
                            <td>
                                <form class="d-inline" action="/mobilregister/addPhone/<%=phone.id%>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">Ta bort</button>
                                </form>
                            </td>
                        </tr>
                        <%  } %> 
                </tbody>
            </table>
        </div>
    </div>
</div>